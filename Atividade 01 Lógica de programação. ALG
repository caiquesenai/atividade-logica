Var
   // Seção de Declarações das variávei
   a,b,c , resultado: inteiro
Inicio
   //
   escreva("Informe um número:")
   leia(a)
   escreva("Informe um número:")
   leia(b)
   escreva("Informe um número:")
   leia(c)

   resultado <- a + b


   se (resultado) < c entao
      escreval("Valor da soma menor que C")
   senao
      escreval("Valor da soma maior que C")
   fimse


